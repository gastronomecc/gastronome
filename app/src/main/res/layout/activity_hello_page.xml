<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup.HelloPage">

    <TextView
        android:id="@+id/tvHelloPageText1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="48dp"
        android:text="@string/hellopagetext1"
        android:textColor="#323643"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.144"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Hello!" />

    <TextView
        android:id="@+id/tvHelloPageText2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/cerebri_sans_regular"
        android:text="@string/hellopagetext2"
        android:textAlignment="viewStart"
        android:textColor="#323643"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/tvHelloPageText1"
        app:layout_constraintStart_toStartOf="@+id/tvHelloPageText1"
        app:layout_constraintTop_toBottomOf="@+id/tvHelloPageText1" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#0AC4BA"
        android:text="NEXT"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnHelloBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/black_arrow"
        app:layout_constraintEnd_toStartOf="@+id/tvHelloPageText1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/tvHelloPageText2"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/sparkle" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvHelloPageText2"
        app:layout_constraintTop_toBottomOf="@+id/tvHelloPageText1"
        app:srcCompat="@drawable/sparkle" />

</android.support.constraint.ConstraintLayout>